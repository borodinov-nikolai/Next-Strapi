{
    "kind": "collectionType",
    "collectionName": "devices",
    "info": {
        "singularName": "device",
        "pluralName": "devices",
        "displayName": "Device",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "unique": true
        },
        "price": {
            "type": "integer",
            "required": true
        },
        "image": {
            "type": "media",
            "multiple": true,
            "required": true,
            "allowedTypes": [
                "images"
            ]
        },
        "brand": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::brand.brand",
            "inversedBy": "devices"
        },
        "description": {
            "type": "richtext"
        },
        "ratings": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::rating.rating",
            "mappedBy": "device"
        },
        "deviceRating": {
            "type": "decimal"
        },
        "comments": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::comment.comment",
            "mappedBy": "device"
        },
        "type": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::type.type",
            "inversedBy": "devices"
        }
    }
}
